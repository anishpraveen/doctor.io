          .clearfix
          #divFees.sideMenu
            p Fees
            hr.sideHr
            .checkboxGroup
              span.spanCheckbox
                input#slab1.ipCheckbox(type='checkbox', name='slabs', value='slab1')
                label(for='slab1')
                span Free - 100
              br
              span.spanCheckbox

    include includes/top-menu.jade
    .container
      .searchResult
        span Physicians Nearby
        span.resultCount
          b= doctors.length
          |  Results Found
      .clearfix
      hr.divider
      #divSearch
        form#formSearch
          span
            input#ipSearch.form-input(type='text', name='search', value='', placeholder='Find Dentists/Clinic')
            button#btnSearch.btn.pointer(type='submit') Search 
        #divSortBy(action='search.html', method='get')
          | Sort by:
          select#ddlSortBy
            option(value='volvo') Popularity
            option(value='saab') Availability
            option(value='mercedes') Cost
            option(value='audi') Recomendations
        .filterIcons
          img#imgSearch(src='/images/icons/search.svg', alt='Search')
          img#imgSort(src='/images/icons/sort.svg', alt='Sort')
          img#imgFilter(src='/images/icons/filter.svg', alt='Filter')
      .clearfix
      .contentContainer
        .sideMenuGroup
          #divServices.sideMenu
            p Services
            input#ipServices(type='text', name='Services')
            input.button.pointer(type='submit', value='')
            hr.sideHr
            .checkboxGroup
              span.spanCheckbox
                input#service1.ipCheckbox(type='checkbox', name='service', value='service1')
                label.first(for='service1', style='margin-top: 0px;')
                span Services One
              br
              span.spanCheckbox
                input#service2.ipCheckbox(type='checkbox', name='service', value='service2')
                label(for='service2')
                span Services Two
              br
              span.spanCheckbox
                input#service3.ipCheckbox(type='checkbox', name='service', value='service2')
                label(for='service3')
                span Services Two
              br
              span.spanCheckbox
                input#service4.ipCheckbox(type='checkbox', name='service', value='service2')
                label(for='service4')
                span Services Two
              br
              span.spanCheckbox
                input#service5.ipCheckbox(type='checkbox', name='service', value='service2')
                label(for='service5')
                span Services Two
              br
              span.spanCheckbox
                input#service6.ipCheckbox(type='checkbox', name='service', value='service2')
                label(for='service6')
                span Services Two
              br
              span.spanCheckbox
                input#service7.ipCheckbox(type='checkbox', name='service', value='service2')
                label(for='service7')
                span Services Two
              br
              span.spanCheckbox
                input#service8.ipCheckbox(type='checkbox', name='service', value='service2')
                label(for='service8')
                span Services Two
              br
              span.spanCheckbox
                input#service9.ipCheckbox(type='checkbox', name='service', value='service2')
                label(for='service9')
                span Services Two
          .clearfix
          #divWeekday.sideMenu
            p Availability
            .slider
              img#outerSlide(src='/images/icons/slider_bg2.svg', alt='')
              img#innerSlide(src='/images/icons/slider_bg.svg', alt='')
              img#start.activeSlider.pointer(src='/images/icons/start.svg', alt='')
              img#activeRegion.activeSlider(src='/images/icons/active_area.svg', alt='')
              img#end.activeSlider.pointer(src='/images/icons/end.svg', alt='')
              div
                p.startText 9 AM
                p.endText 5 PM
            hr.sideHr
            .checkboxGroup
              span.spanCheckbox
                input#Monday.ipCheckbox(type='checkbox', name='days', value='Monday')
                label(for='Monday')
                span Monday
              br
              span.spanCheckbox
                input#Tuesday.ipCheckbox(type='checkbox', name='days', value='Tuesday')
                label(for='Tuesday')
                span Tuesday
              br
              span.spanCheckbox
                input#Wednesday.ipCheckbox(type='checkbox', name='days', value='Wednesday')
                label(for='Wednesday')
